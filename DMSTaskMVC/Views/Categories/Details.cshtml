@model BLL.DTOs.Categories.CategoryDTO

@{
    ViewData["Title"] = "Details";
}

<h4 style="color:#232F3E;font-style:italic;font-weight:bold;"><i class="fa-solid fa-magnifying-glass mx-2 " style=" font-size:smaller"></i>Details Of Category name : @Model.Name </h4>

<div class="mt-4">
    <div class="row justify-content-center ">

        <div class="card col-lg-6 col-md-9 col-sm-12 " style="box-shadow: 0px 5px 10px rgba(0, 0, 0, .5);background-color:#232F3E;">
            <div class="card-body">
               
                    <h1 style="color:#FF9900" class="card-title">@Model.Name</h1>

                <div>
                  
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                </div>
            </div>
        </div>


    </div>


    
</div>

