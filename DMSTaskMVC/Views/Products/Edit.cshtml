@model BLL.DTOs.Products.EditProductDTO
@{
    ViewData["Title"] = "Edit";
}

<div style="text-align:right" class="mb-2">
    <a asp-action="Index" class="btn btn-secondary"><i class="fa-solid fa-angles-left"></i>Back to List</a>
</div>
<div class="row justify-content-center">

    <div class="card col-lg-6  col-md-9 col-sm-12 px-2">


        <div class="my-2" style="text-align: center;">

            <h4 style="color:#FAB005" class="my-4 ">Edit A Category</h4>

        </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label form-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="row mb-3">
                    <div class="text-lg-end col-lg-3">
                        <label style="text-align:center" asp-for="CategoriesId" class="control-label"></label>
                    </div>
                    <div class="col-lg-9">
                        <select asp-for="CategoriesId" class="form-select" asp-items="ViewBag.Categories" multiple>
                            <option value="0" selected disabled>Select Multi Categories</option>
                        </select>
                        <span asp-validation-for="CategoriesId" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="form-group d-flex justify-content-center mt-2">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}